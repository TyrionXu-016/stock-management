/* components/product-card/product-card.wxss */
.product-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(15, 118, 110, 0.06);
}

.product-card.warning {
  border-left: 6rpx solid #f59e0b;
}

.main {
  flex: 1;
  min-width: 0;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.meta {
  font-size: 24rpx;
  color: #94a3b8;
}

.sku {
  margin-right: 16rpx;
}

.right {
  text-align: right;
}

.stock {
  font-size: 28rpx;
  font-weight: 500;
  color: #0f766e;
}

.stock.warn {
  color: #f59e0b;
}

.status {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 4rpx;
}

.status.offline {
  color: #94a3b8;
}
