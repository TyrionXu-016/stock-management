page { background: #f1f5f9; }
.page { padding: 24rpx; padding-bottom: 80rpx; }
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(15, 118, 110, 0.06);
}
.card-title { font-size: 30rpx; font-weight: 600; color: #1e293b; margin-bottom: 24rpx; }
.row { display: flex; justify-content: space-between; padding: 16rpx 0; font-size: 28rpx; }
.label { color: #64748b; }
.value { color: #1e293b; }
.status-1 { color: #f59e0b; }
.status-2 { color: #059669; }
.status-3 { color: #dc2626; }
.item { padding: 20rpx 0; border-bottom: 1rpx solid #f1f5f9; }
.item:last-of-type { border-bottom: none; }
.item-name { font-weight: 500; color: #1e293b; margin-bottom: 8rpx; }
.item-row { font-size: 26rpx; color: #64748b; }
.summary { margin-top: 24rpx; padding-top: 24rpx; border-top: 1rpx solid #f1f5f9; display: flex; justify-content: space-between; font-weight: 500; }
.actions { display: flex; gap: 24rpx; margin-top: 32rpx; }
.btn { flex: 1; height: 88rpx; line-height: 88rpx; border-radius: 44rpx; font-size: 30rpx; }
.btn-pass { background: #0f766e; color: #fff; border: none; }
.btn-reject { background: #fff; color: #dc2626; border: 1rpx solid #fecaca; }
