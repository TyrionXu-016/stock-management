page { background: #f1f5f9; }
.page { min-height: 100vh; padding-bottom: 32rpx; }

.tabs {
  display: flex;
  background: #fff;
  padding: 0 24rpx;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #64748b;
}
.tab.active {
  color: #0f766e;
  font-weight: 600;
  border-bottom: 4rpx solid #0f766e;
}

.filters { padding: 20rpx 24rpx; background: #fff; }
.filter-item {
  font-size: 26rpx;
  color: #64748b;
  padding: 16rpx 24rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
}
.total { font-size: 26rpx; color: #64748b; }
.add-btn { font-size: 28rpx; color: #0f766e; font-weight: 500; }

.list-scroll { height: calc(100vh - 340rpx); padding: 0 24rpx; }
.order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(15, 118, 110, 0.06);
}
.order-card .row { display: flex; justify-content: space-between; margin-bottom: 12rpx; font-size: 28rpx; }
.order-card .row:last-child { margin-bottom: 0; }
.order-card .no { font-weight: 600; color: #1e293b; }
.order-card .status { font-size: 24rpx; }
.status-1 { color: #f59e0b; }
.status-2 { color: #059669; }
.status-3 { color: #dc2626; }
.order-card .label { color: #94a3b8; }
.order-card .value { color: #1e293b; }
.order-card .time { font-size: 24rpx; color: #94a3b8; }
.order-card .meta { margin-top: 8rpx; padding-top: 8rpx; border-top: 1rpx solid #f1f5f9; }

.empty { padding: 120rpx 0; text-align: center; font-size: 28rpx; color: #94a3b8; }
