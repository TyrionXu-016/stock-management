page { background: #f1f5f9; }
.page { padding: 24rpx; }
.menu-list { background: #fff; border-radius: 20rpx; margin-bottom: 24rpx; overflow: hidden; box-shadow: 0 4rpx 16rpx rgba(15,118,110,0.06); }
.menu-item { display: flex; align-items: center; justify-content: space-between; padding: 32rpx 40rpx; border-bottom: 1rpx solid #f1f5f9; }
.menu-item:last-child { border-bottom: none; }
.menu-item .title { font-size: 30rpx; color: #1e293b; }
.menu-item .value { font-size: 28rpx; color: #94a3b8; }
.menu-item .arrow { font-size: 36rpx; color: #94a3b8; }
.menu-item.danger .title { color: #dc2626; }
