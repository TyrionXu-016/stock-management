<view class="page">
  <view class="menu-list">
    <view class="menu-item" bindtap="onCategory">
      <text class="title">分类管理</text>
      <text class="arrow">›</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item">
      <text class="title">关于</text>
      <text class="value">库存管理</text>
    </view>
    <view class="menu-item">
      <text class="title">版本号</text>
      <text class="value">{{version}}</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="onClearCache">
      <text class="title">清除缓存</text>
      <text class="arrow">›</text>
    </view>
    <view class="menu-item danger" bindtap="onLogout">
      <text class="title">退出登录</text>
      <text class="arrow">›</text>
    </view>
  </view>
</view>
