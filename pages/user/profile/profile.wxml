<!--pages/user/profile/profile.wxml-->
<view class="profile-page">
  <view class="user-card">
    <block wx:if="{{user.avatar}}">
      <image class="avatar" src="{{user.avatar}}" mode="aspectFill" />
    </block>
    <view wx:else class="avatar avatar-placeholder">
      <text>{{user && user.nickname ? user.nickname.charAt(0) : '?'}}</text>
    </view>
    <view class="info">
      <text class="nickname">{{user && user.nickname ? user.nickname : '未设置昵称'}}</text>
      <text class="phone">{{user && user.phone ? user.phone : '未绑定手机'}}</text>
    </view>
    <view class="edit-btn" bindtap="onEdit">
      <text>编辑</text>
      <text class="arrow">›</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="onSettings">
      <text class="menu-title">设置</text>
      <text class="arrow">›</text>
    </view>
  </view>

  <view class="logout-wrap">
    <button class="btn-logout" bindtap="onLogout">退出登录</button>
  </view>
</view>
