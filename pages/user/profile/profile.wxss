/* pages/user/profile/profile.wxss */
page {
  background: #f1f5f9;
  min-height: 100vh;
}

.profile-page {
  padding: 32rpx;
}

.user-card {
  background: linear-gradient(135deg, #0f766e 0%, #14b8a6 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 118, 110, 0.25);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  margin-right: 32rpx;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
}

.phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.edit-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #fff;
}

.edit-btn .arrow {
  margin-left: 8rpx;
  font-size: 32rpx;
}

.menu-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(15, 118, 110, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 40rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-title {
  font-size: 30rpx;
  color: #1e293b;
}

.menu-item .arrow {
  font-size: 36rpx;
  color: #94a3b8;
}

.logout-wrap {
  margin-top: 64rpx;
  padding: 0 24rpx;
}

.btn-logout {
  background: #fff;
  color: #dc2626;
  border: 1rpx solid #fecaca;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}
