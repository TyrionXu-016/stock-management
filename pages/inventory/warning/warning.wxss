page { background: #f1f5f9; }
.page { padding: 24rpx; }
.summary { background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%); border-radius: 20rpx; padding: 40rpx; text-align: center; margin-bottom: 24rpx; }
.count { display: block; font-size: 56rpx; font-weight: 700; color: #fff; }
.label { font-size: 28rpx; color: rgba(255,255,255,0.9); }
.item { display: flex; justify-content: space-between; align-items: center; background: #fff; border-radius: 16rpx; padding: 28rpx 32rpx; margin-bottom: 20rpx; border-left: 6rpx solid #f59e0b; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.item-main { flex: 1; min-width: 0; }
.item-main .name { font-size: 30rpx; font-weight: 600; color: #1e293b; display: block; margin-bottom: 8rpx; }
.item-main .meta { font-size: 24rpx; color: #94a3b8; display: block; margin-bottom: 12rpx; }
.nums { display: flex; gap: 24rpx; font-size: 26rpx; }
.nums .stock { color: #dc2626; }
.nums .min { color: #64748b; }
.nums .gap { color: #f59e0b; font-weight: 500; }
.btn-replenish { padding: 16rpx 32rpx; background: #0f766e; color: #fff; border-radius: 32rpx; font-size: 26rpx; }
.empty { padding: 120rpx 0; text-align: center; font-size: 28rpx; color: #94a3b8; }
.size-tag { color: #64748b; font-weight: normal; }
