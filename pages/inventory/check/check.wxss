page { background: #f1f5f9; }
.page { padding: 24rpx; }
.header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24rpx; }
.total { font-size: 26rpx; color: #64748b; }
.add-btn { font-size: 28rpx; color: #0f766e; font-weight: 500; }
.item { background: #fff; border-radius: 16rpx; padding: 28rpx 32rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.item .row { display: flex; justify-content: space-between; margin-bottom: 8rpx; font-size: 28rpx; }
.item .no { font-weight: 600; color: #1e293b; }
.item .status { color: #0f766e; }
.item .meta { font-size: 24rpx; color: #94a3b8; margin-bottom: 0; }
.empty { padding: 120rpx 0; text-align: center; font-size: 28rpx; color: #94a3b8; }
