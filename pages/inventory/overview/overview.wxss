page { background: #f1f5f9; }
.page { min-height: 100vh; padding-bottom: 32rpx; }
.summary { display: flex; gap: 24rpx; padding: 24rpx; }
.stat { flex: 1; background: #fff; border-radius: 16rpx; padding: 28rpx; text-align: center; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.stat-val { display: block; font-size: 40rpx; font-weight: 700; color: #0f766e; }
.stat-label { font-size: 24rpx; color: #64748b; }
.filters { background: #fff; padding: 20rpx 24rpx; margin-bottom: 16rpx; }
.search-row { display: flex; align-items: center; margin-bottom: 16rpx; }
.search-input { flex: 1; height: 72rpx; background: #f8fafc; border-radius: 36rpx; padding: 0 24rpx; font-size: 28rpx; }
.search-btn { font-size: 28rpx; color: #0f766e; padding-left: 24rpx; }
.filter-row { display: flex; align-items: center; justify-content: space-between; }
.filter-item { font-size: 26rpx; color: #64748b; padding: 16rpx 24rpx; background: #f8fafc; border-radius: 12rpx; }
.switch-row { display: flex; align-items: center; gap: 16rpx; font-size: 26rpx; color: #64748b; }
.links { display: flex; gap: 16rpx; padding: 0 24rpx 24rpx; }
.link { flex: 1; background: #fff; border-radius: 16rpx; padding: 24rpx; text-align: center; font-size: 28rpx; color: #0f766e; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.list-scroll { height: calc(100vh - 420rpx); padding: 0 24rpx; }
.item { display: flex; justify-content: space-between; align-items: center; background: #fff; border-radius: 16rpx; padding: 28rpx 32rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.item.warn { border-left: 6rpx solid #f59e0b; }
.item-main { flex: 1; min-width: 0; }
.item-main .name { font-size: 30rpx; font-weight: 600; color: #1e293b; display: block; margin-bottom: 8rpx; }
.item-main .meta { font-size: 24rpx; color: #94a3b8; }
.item-right { text-align: right; }
.item-right .stock { font-size: 28rpx; font-weight: 500; color: #0f766e; }
.item-right .stock.warn { color: #f59e0b; }
.warn-tag { display: block; font-size: 22rpx; color: #f59e0b; margin-top: 4rpx; }
.empty { padding: 120rpx 0; text-align: center; font-size: 28rpx; color: #94a3b8; }
