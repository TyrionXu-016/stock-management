page { background: #f1f5f9; }
.page { min-height: 100vh; padding-bottom: 32rpx; }
.filters { padding: 20rpx 24rpx; background: #fff; }
.filter-item { font-size: 26rpx; color: #64748b; padding: 16rpx 24rpx; background: #f8fafc; border-radius: 12rpx; }
.list-scroll { height: calc(100vh - 120rpx); padding: 24rpx; }
.item { background: #fff; border-radius: 16rpx; padding: 28rpx 32rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.item-header { display: flex; justify-content: space-between; margin-bottom: 12rpx; }
.item-header .name { font-size: 30rpx; font-weight: 600; color: #1e293b; }
.item-header .type { font-size: 24rpx; color: #0f766e; }
.item-row { font-size: 28rpx; color: #64748b; margin-bottom: 8rpx; }
.item-meta { font-size: 24rpx; color: #94a3b8; }
.empty { padding: 120rpx 0; text-align: center; font-size: 28rpx; color: #94a3b8; }
