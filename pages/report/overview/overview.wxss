page { background: #f1f5f9; }
.page { padding: 24rpx; }
.date-bar { display: flex; align-items: center; justify-content: center; gap: 16rpx; margin-bottom: 32rpx; }
.date-item { font-size: 28rpx; color: #0f766e; padding: 16rpx 24rpx; background: #fff; border-radius: 12rpx; }
.sep { font-size: 26rpx; color: #64748b; }
.stats { margin-bottom: 32rpx; }
.stat-row { display: flex; gap: 20rpx; margin-bottom: 20rpx; }
.stat-card { flex: 1; background: #fff; border-radius: 16rpx; padding: 28rpx; text-align: center; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.stat-card.warn .val { color: #f59e0b; }
.stat-card .val { display: block; font-size: 36rpx; font-weight: 700; color: #0f766e; margin-bottom: 8rpx; }
.stat-card .lbl { font-size: 24rpx; color: #64748b; }
.links { display: flex; flex-direction: column; gap: 20rpx; }
.link { background: #fff; border-radius: 16rpx; padding: 32rpx; text-align: center; font-size: 30rpx; color: #0f766e; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
