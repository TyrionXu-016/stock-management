page { background: #f1f5f9; }
.page { padding: 24rpx; }
.date-bar { display: flex; align-items: center; justify-content: center; gap: 16rpx; margin-bottom: 24rpx; }
.date-item { font-size: 28rpx; color: #0f766e; padding: 16rpx 24rpx; background: #fff; border-radius: 12rpx; }
.sep { font-size: 26rpx; color: #64748b; }
.group-bar { margin-bottom: 24rpx; }
.group-item { font-size: 28rpx; color: #64748b; padding: 16rpx 24rpx; background: #fff; border-radius: 12rpx; }
.list-scroll { height: calc(100vh - 200rpx); }
.item { background: #fff; border-radius: 16rpx; padding: 28rpx 32rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 12rpx rgba(15,118,110,0.06); }
.item-name { font-size: 30rpx; font-weight: 600; color: #1e293b; margin-bottom: 12rpx; }
.item-row { font-size: 26rpx; color: #64748b; }
.empty { padding: 120rpx 0; text-align: center; font-size: 28rpx; color: #94a3b8; }
