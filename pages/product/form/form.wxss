/* pages/product/form/form.wxss */
page {
  background: #f1f5f9;
}

.page {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.form {
  background: #fff;
  border-radius: 20rpx;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(15, 118, 110, 0.06);
}

.group {
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.group:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 12rpx;
}

.req {
  color: #dc2626;
}

.input {
  font-size: 30rpx;
  color: #1e293b;
}

.picker-value {
  font-size: 30rpx;
  color: #1e293b;
}

.picker-value:empty::before,
.picker-value:empty {
  color: #94a3b8;
}

.image-upload {
  margin-top: 12rpx;
}

.image-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8fafc;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.del-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 36rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #cbd5e1;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #94a3b8;
}

.upload-icon {
  font-size: 48rpx;
  line-height: 1;
}

.upload-text {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
}

.btn-cancel {
  background: #fff;
  color: #64748b;
  border: 1rpx solid #e2e8f0;
}

.btn-submit {
  background: #0f766e;
  color: #fff;
  border: none;
}

.section-title {
  font-weight: 600;
  color: #1e293b;
  border-bottom: none;
  padding-bottom: 12rpx;
}

.sku-list {
  margin: 0 -32rpx;
}

.sku-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.sku-row .input {
  flex: none;
}

.sku-size {
  width: 100rpx;
}

.sku-num {
  width: 80rpx;
}

.sku-actions {
  margin-left: auto;
  display: flex;
  gap: 16rpx;
}

.link {
  color: #0f766e;
  font-size: 26rpx;
}

.link.danger {
  color: #dc2626;
}

.btn-add-sku {
  background: #f8fafc;
  color: #64748b;
  border: 2rpx dashed #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx;
}
