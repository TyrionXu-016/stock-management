/* pages/product/detail/detail.wxss */
page {
  background: #f1f5f9;
}

.page {
  padding: 24rpx;
  padding-bottom: 80rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(15, 118, 110, 0.06);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 24rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.label {
  color: #64748b;
  min-width: 160rpx;
}

.value {
  color: #1e293b;
  text-align: right;
}

.value.offline {
  color: #94a3b8;
}

.value.warn {
  color: #f59e0b;
}

.warn-tip {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #fef3c7;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #b45309;
}

.actions {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
}

.btn-primary {
  background: #0f766e;
  color: #fff;
  border: none;
}

.btn-danger {
  background: #fff;
  color: #dc2626;
  border: 1rpx solid #fecaca;
}

.link-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 32rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #0f766e;
}

.arrow {
  font-size: 36rpx;
}
