/* pages/category/list/list.wxss */
page {
  background: #f1f5f9;
}

.page {
  padding: 24rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.add-btn {
  font-size: 28rpx;
  color: #0f766e;
  font-weight: 500;
}

.list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(15, 118, 110, 0.06);
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.item:last-child {
  border-bottom: none;
}

.info {
  flex: 1;
}

.name {
  font-size: 30rpx;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
}

.sort {
  font-size: 24rpx;
  color: #94a3b8;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.action {
  font-size: 26rpx;
  color: #0f766e;
}

.action.danger {
  color: #dc2626;
}

.empty {
  padding: 120rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #94a3b8;
}
