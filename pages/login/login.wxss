/* pages/login/login.wxss */
page {
  background: linear-gradient(180deg, #0f766e 0%, #0f766e 45%, #f8fafc 45%);
  min-height: 100vh;
}

.login-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 120rpx 48rpx 80rpx;
  box-sizing: border-box;
}

.brand {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  font-weight: 600;
  color: #0f766e;
  box-shadow: 0 8rpx 24rpx rgba(15, 118, 110, 0.25);
  margin-bottom: 24rpx;
}

.name {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
}

.slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.content {
  flex: 1;
  background: #fff;
  border-radius: 24rpx;
  padding: 56rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(15, 118, 110, 0.12);
}

.protocol {
  margin-bottom: 48rpx;
}

.protocol-label {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 26rpx;
  color: #64748b;
}

.protocol-label checkbox {
  margin-right: 12rpx;
}

.link {
  color: #0f766e;
  font-weight: 500;
}

.btn-login {
  background: linear-gradient(135deg, #0f766e 0%, #14b8a6 100%);
  border: none;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.btn-login[disabled] {
  opacity: 0.8;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.6;
}
